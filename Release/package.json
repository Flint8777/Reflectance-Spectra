{
    "name": "reflectance-spectra-viewer",
    "private": true,
    "version": "1.0.0",
    "description": "FT-IR Reflectance Spectra Viewer",
    "author": "Your Name",
    "main": "electron/main.cjs",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "vite build && electron-builder",
        "electron:build:win": "vite build && electron-builder --win",
        "electron:build:mac": "vite build && electron-builder --mac",
        "electron:build:all": "vite build && electron-builder --win --mac",
    "pack:zip": "powershell -NoProfile -Command \"$v=(Get-Content package.json | ConvertFrom-Json).version; Compress-Archive -Path dist-electron\\win-unpacked\\* -DestinationPath dist-electron\\Reflectance-Spectra-Viewer-v$($v)-windows-portable.zip -Force\""
    },
    "dependencies": {
        "plotly.js-dist-min": "^2.34.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-plotly.js": "^2.6.0",
        "papaparse": "^5.4.1"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.3.1",
        "vite": "^5.4.8",
        "electron": "^28.0.0",
        "electron-builder": "24.13.3",
        "concurrently": "^8.2.2",
        "wait-on": "^7.2.0"
    },
    "optionalDependencies": {
        "dmg-license": "^1.0.11"
    },
    "build": {
        "appId": "com.reflectance.spectra.viewer",
        "productName": "Reflectance Spectra Viewer",
        "icon": "electron/icons/icon.png",
        "directories": {
            "output": "dist-electron"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "win": {
            "target": [
                "portable"
            ],
            "icon": "electron/icons/icon.ico",
            "sign": null
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.education"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}